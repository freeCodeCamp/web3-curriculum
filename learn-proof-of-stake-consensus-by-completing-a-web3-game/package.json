{
  "name": "proof-of-stake",
  "version": "1.0.0",
  "description": "freeCodeCamp Web3 curriculum project",
  "main": "node/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build:blockchain": "wasm-pack build --debug blockchain --target nodejs",
    "build:client": "npm -w=client run build",
