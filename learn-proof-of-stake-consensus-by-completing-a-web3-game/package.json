    "start:node": "npm -w=node run start"
  },
  "workspaces": [
    "client",
    "node"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShaunSHamilton/proof-of-stake.git"
